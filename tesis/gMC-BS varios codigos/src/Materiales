//:::::::::::::::::::::::::::placas::::::::::::::::::::::::::::::::::
  //:::::::::::::::::::::::::: Placa 1::::::::::::::::::::::::::::::::::
  G4Material* platematerial=drywall;
  
  G4double placa_hx = 10.0*cm; // h = half
  G4double placa_hy = 10.0*cm;
  G4double placa_hz = 0.5*cm;

  auto placaSolid1
    = new G4Box("placa1", placa_hx, placa_hy, placa_hz);

  fPlacaLogical1 = new G4LogicalVolume(placaSolid1,aluminum,"placaLogical1");

  G4ThreeVector Tplaca;    
  G4Transform3D T3Dplaca;
  Tplaca.setX(0.0*cm);  Tplaca.setY(0.*cm);
  G4double zPlaca = - placa_hz  ;
  Tplaca.setZ(zPlaca);
  T3Dplaca = G4Transform3D(R0,Tplaca);    
  new G4PVPlacement(T3Dplaca,
  		    fPlacaLogical1,
  		    "placaPhysical1",
  		    worldLogical,
  		    false,0,checkOverlaps);

  //::::::::::::::::PLACA 2::::::::::::::::::::::::::::::::::::::::
  G4ThreeVector pos2 = G4ThreeVector(0*cm, 0, -3*placa_hz);
  G4Box* placaSolid2 = new G4Box("placa2", placa_hx,placa_hy,placa_hz);
  fPlacaLogical2 =
    new G4LogicalVolume(placaSolid2,         //its solid
                        platematerial,          //its material
                        "placaLogical2");           //its name
  new G4PVPlacement(0,                       //no rotation
		    pos2,                    //at position
		    fPlacaLogical2,             //its logical volume
		    "placaPhysical2",                //its name
		    worldLogical,                //its mother  volume
		    false,                   //no boolean operation
		    0,                       //copy number
		    checkOverlaps);          //overlaps checking
  //::::::::::::::::PLACA 3::::::::::::::::::::::::::::::::::::::::
    G4ThreeVector pos3 = G4ThreeVector(0*cm, 0, -5*placa_hz);
  G4Box* placaSolid3 = new G4Box("placa3", placa_hx,placa_hy,placa_hz);
  fPlacaLogical3 =
    new G4LogicalVolume(placaSolid3,         //its solid
                        platematerial,          //its material
                        "placaLogical3");           //its name
  new G4PVPlacement(0,                       //no rotation
		    pos3,                    //at position
		    fPlacaLogical3,             //its logical volume
		    "placaPhysical3",                //its name
		    worldLogical,                //its mother  volume
		    false,                   //no boolean operation
		    0,                       //copy number
		    checkOverlaps);          //overlaps checking
  //::::::::::::::::PLACA 4::::::::::::::::::::::::::::::::::::::::
    G4ThreeVector pos4 = G4ThreeVector(0*cm, 0, -7*placa_hz);
  G4Box* placaSolid4 = new G4Box("placa4", placa_hx,placa_hy,placa_hz);
  fPlacaLogical4 =
