  //::::::::::::::::PLACA 6::::::::::::::::::::::::::::::::::::::::
  G4ThreeVector pos6 = G4ThreeVector(0*cm, 0, -11*placa_hz);
  G4Box* placaSolid6 = new G4Box("placa6", placa_hx,placa_hy,placa_hz);
  fPlacaLogical6 =
    new G4LogicalVolume(placaSolid6,         //its solid
