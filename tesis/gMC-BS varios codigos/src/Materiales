		    checkOverlaps);          //overlaps checking
  //::::::::::::::::PLACA 5::::::::::::::::::::::::::::::::::::::::
  G4ThreeVector pos5 = G4ThreeVector(0*cm, 0, -9*placa_hz);
  G4Box* placaSolid5 = new G4Box("placa5", placa_hx,placa_hy,placa_hz);
