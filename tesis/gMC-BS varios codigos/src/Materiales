 //elementos propios
  a = 40.978*g/mole;
  G4Element* elCa = new G4Element(name="Calcium", symbol="Ca", z=20., a);
  a = 24.304*g/mole;
  G4Element* elMg = new G4Element(name="Magnesium", symbol="Mg", z=12., a);
  a = 32.06*g/mole;
  G4Element* elS = new G4Element(name="Sulfur", symbol="S", z=16., a);
  a = 39.098*g/mole;
  G4Element* elK = new G4Element(name="Potassium", symbol="K", z=19., a);
  a = 55.845*g/mole;
  G4Element* elFe = new G4Element(name="Iron", symbol="Fe", z=26., a);
  //::::::::::::::::::::::::::::::::::::::::::::::::::::::::::::




//::::::::::::::::::::::::::::Mortar:::::::::::::::::::::::::::::
  //CaO
  CaO = new G4Material("CaO", density= 3.34*g/cm3, nElem=2);
  CaO->AddElement(elCa,1);
  CaO->AddElement(elO,1);
  //Fe2O3
  Fe2O3 = new G4Material("Fe2O3", density= 5.24*g/cm3, nElem=2);
  Fe2O3->AddElement(elFe,2);
  Fe2O3->AddElement(elO,3);
  //Al2O3
  Al2O3 = new G4Material("Al2O3", density= 3.95*g/cm3, nElem=2);
  Al2O3->AddElement(elAl,2);
  Al2O3->AddElement(elO,3);
  //MgO
  MgO = new G4Material("MgO", density= 3.58*g/cm3, nElem=2);
  MgO->AddElement(elMg,1);
  MgO->AddElement(elO,1);
  //SO3
  SO3 = new G4Material("SO3", density= 1.92*g/cm3, nElem=2);
  SO3->AddElement(elS,1);
  SO3->AddElement(elO,3);
  //K2O
  K2O = new G4Material("K2O", density= 2.35*g/cm3, nElem=2);
  K2O->AddElement(elK,2);
  K2O->AddElement(elO,1);
  //Na2O
  Na2O = new G4Material("Na2O", density= 2.27*g/cm3, nElem=2);
  Na2O->AddElement(elNa,2);
  Na2O->AddElement(elO,1);
  
  //mortar
  Mortar=new G4Material("Mortar",2.08*g/cm3,nElem=9);
  Mortar->AddMaterial(SiO2,fractionMass=79.80856*perCent);
  Mortar->AddMaterial(water,fractionMass=11.4558*perCent);
  Mortar->AddMaterial(CaO,fractionMass=5.19464*perCent);
  Mortar->AddMaterial(Fe2O3,fractionMass=1.18060*perCent);
  Mortar->AddMaterial(Al2O3,fractionMass=0.70836*perCent);
  Mortar->AddMaterial(MgO,fractionMass=0.70836*perCent);
  Mortar->AddMaterial(SO3,fractionMass=0.70836*perCent);
  Mortar->AddMaterial(K2O,fractionMass=0.16528*perCent);
  Mortar->AddMaterial(Na2O,fractionMass=0.07084*perCent);
  //::::::::::::::::::::::::SuperBoard::::::::::::::::::::::::::::::
  //C6H10O5
  C6H10O5 = new G4Material("C6H10O5", density= 1.5*g/cm3, nElem=3);
  C6H10O5->AddElement(elH,10);
  C6H10O5->AddElement(elC,6);
  C6H10O5->AddElement(elO,5);
  //AlH3O3
  AlH3O3 = new G4Material("AlH3O3", density= 2.42*g/cm3, nElem=3);
  AlH3O3->AddElement(elH,10);
  AlH3O3->AddElement(elC,6);
  AlH3O3->AddElement(elO,5);
  //CaH2SiO4
  CaH2SiO4 = new G4Material("CaH2SiO4", density= 2.6*g/cm3, nElem=3);
  CaH2SiO4->AddElement(elH,10);
  CaH2SiO4->AddElement(elC,6);
  CaH2SiO4->AddElement(elO,5);
  //SBoard
  SBoard=new G4Material("SBoard",density=1.32*g/cm3,nElem=4);
  SBoard->AddMaterial(SiO2,fractionMass=50.*perCent);
  SBoard->AddMaterial(AlH3O3,fractionMass=5.*perCent);
  SBoard->AddMaterial(C6H10O5,fractionMass=5.*perCent);
  SBoard->AddMaterial(CaH2SiO4,fractionMass=40.*perCent);
  
  //::::::::::::::::::::::::drywall:::::::::::::::::::::::::::::::::
  //H2O4S
  H2O4S = new G4Material("H2O4S", density= 1.84*g/cm3, nElem=3);
  H2O4S->AddElement(elH,2);
  H2O4S->AddElement(elO,4);
  H2O4S->AddElement(elS,1);

  gypsum = new G4Material("gypsum", density= 2.32*g/cm3, nElem=3);
  gypsum->AddMaterial(H2O4S,fractionMass=56.3*perCent);
  gypsum->AddMaterial(water,fractionMass=20.7*perCent);
  gypsum->AddElement(elCa,fractionMass=23*perCent);

  drywall=new G4Material("drywall" , density=0.532*g/cm3,nElem=2);
  drywall->AddMaterial(gypsum,fractionMass=90*perCent);
  drywall->AddMaterial(C6H10O5,fractionMass=10*perCent);
  
  G4cout << G4endl << "The materials defined are : " << G4endl << G4endl;
  G4cout << *(G4Material::GetMaterialTable()) << G4endl;

