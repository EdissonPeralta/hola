  //::::::::::::::::PLACA 8::::::::::::::::::::::::::::::::::::::::
  G4ThreeVector pos8 = G4ThreeVector(0*cm, 0, -15*placa_hz);
  G4Box* placaSolid8 = new G4Box("placa8", placa_hx,placa_hy,placa_hz);
