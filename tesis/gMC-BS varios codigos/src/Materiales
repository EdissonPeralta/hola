  //::::::::::::::::PLACA 7::::::::::::::::::::::::::::::::::::::::
  G4ThreeVector pos7 = G4ThreeVector(0*cm, 0, -13*placa_hz);
  G4Box* placaSolid7 = new G4Box("placa7", placa_hx,placa_hy,placa_hz);
